<form action="/memos/<%= @memo['id'] %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="title" value="<%= h(@memo['title']) %>">
  <br>
  <textarea name="content"><%= h(@memo['content']) %></textarea>
  <br>
  <button type="submit">保存</button>
</form>

<a href="/memos/<%= @memo['id'] %>">詳細に戻る</a>
